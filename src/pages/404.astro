---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found | Calumet Park Memorial" description="The page you requested was not found.">
  <section class="section-spacing bg-white">
    <div class="container-wide max-w-2xl rounded-3xl border border-slatewood-200 bg-slatewood-50 p-8 text-center">
      <p class="section-eyebrow">404</p>
      <h1 class="mt-2 font-serif text-4xl text-slatewood-900">We couldn't find that page.</h1>
      <p class="mt-4 text-slatewood-600">Use one of the links below to continue browsing Calumet Park resources.</p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a class="button-primary" href="/">Go Home</a>
        <a class="button-outline" href="/contact/">Contact Us</a>
      </div>
    </div>
  </section>
</BaseLayout>
