---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
import { contactPage } from '../../data/site';

const mainLocation = contactPage.locations[0];
---

<BaseLayout title={contactPage.metaTitle} description={contactPage.metaDescription}>
  <PageHero
    eyebrow={contactPage.hero.eyebrow}
    title={contactPage.hero.title}
    description={contactPage.hero.description}
    primaryCta={contactPage.hero.primaryCta}
    secondaryCta={contactPage.hero.secondaryCta}
  />

  <section class="section-spacing bg-white">
    <div class="container-wide">
      <p class="section-eyebrow">{contactPage.locationsSection.eyebrow}</p>
      <h2 class="mt-2 section-title">{contactPage.locationsSection.title}</h2>
      <p class="section-lead">{contactPage.locationsSection.description}</p>

      <div class="mt-8 grid gap-6 lg:grid-cols-2">
        {contactPage.locations.map((location) => (
          <article class="card">
            <h3 class="font-serif text-2xl text-slatewood-900">{location.name}</h3>
            <p class="mt-3 text-sm text-slatewood-600">{location.address}</p>
            <div class="mt-4 space-y-2 text-sm text-slatewood-600">
              <p>
                <strong>Phone:</strong> <a class="text-calumet-700" href={location.phoneHref}>{location.phone}</a>
              </p>
              <p><strong>Fax:</strong> {location.fax}</p>
              <p><strong>Hours:</strong></p>
              <ul class="list-disc pl-5">
                {location.hours.map((hours) => (
                  <li>{hours}</li>
                ))}
              </ul>
            </div>
            <a class="button-outline mt-6" href={location.addressHref} target="_blank" rel="noreferrer">
              Get Directions
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slatewood-100" id="schedule">
    <div class="container-wide rounded-3xl border border-slatewood-200 bg-white p-8">
      <h2 class="font-serif text-3xl text-slatewood-900">{contactPage.scheduleSection.title}</h2>
      <p class="mt-3 text-slatewood-600">{contactPage.scheduleSection.description}</p>
      <div class="mt-6 flex flex-wrap gap-4">
        <a class="button-primary" href="https://calendly.com" target="_blank" rel="noreferrer">
          {contactPage.scheduleSection.ctas[0].label}
        </a>
        <a class="button-outline" href={contactPage.scheduleSection.ctas[1].href}>
          {contactPage.scheduleSection.ctas[1].label}
        </a>
      </div>
    </div>
  </section>

  <section class="section-spacing bg-white" id="message-us">
    <div class="container-wide grid gap-8 lg:grid-cols-[1.2fr_0.8fr]">
      <article class="rounded-3xl border border-slatewood-200 bg-slatewood-50 p-6 md:p-8">
        <p class="section-eyebrow">{contactPage.messageSection.eyebrow}</p>
        <h2 class="mt-2 font-serif text-3xl text-slatewood-900 md:text-4xl">{contactPage.messageSection.title}</h2>
        <p class="mt-4 text-slatewood-600">{contactPage.messageSection.description}</p>

        <form class="mt-8 space-y-6">
          <div class="grid gap-5 md:grid-cols-2">
            <label>
              <span class="field-label">First Name</span>
              <input class="field-input" name="firstName" type="text" autocomplete="given-name" required />
            </label>
            <label>
              <span class="field-label">Last Name</span>
              <input class="field-input" name="lastName" type="text" autocomplete="family-name" required />
            </label>
            <label>
              <span class="field-label">Email</span>
              <input class="field-input" name="email" type="email" autocomplete="email" required />
            </label>
            <label>
              <span class="field-label">Phone</span>
              <input class="field-input" name="phone" type="tel" autocomplete="tel" />
            </label>
            <label class="md:col-span-2">
              <span class="field-label">How Can We Help?</span>
              <select class="field-input" name="inquiryType" required>
                <option value="" disabled selected>Select a topic</option>
                {contactPage.messageSection.inquiryOptions.map((option) => (
                  <option value={option}>{option}</option>
                ))}
              </select>
            </label>
          </div>

          <label class="block">
            <span class="field-label">Message</span>
            <textarea
              class="field-input min-h-[160px] resize-y"
              name="message"
              placeholder="Please share any details that would help our team support you."
              required
            ></textarea>
          </label>

          <div class="flex flex-col gap-4 border-t border-slatewood-200 pt-6 sm:flex-row sm:items-center sm:justify-between">
            <p class="text-xs uppercase tracking-[0.16em] text-slatewood-500">We typically respond within one business day.</p>
            <button class="button-primary" type="submit">Submit Request</button>
          </div>
        </form>
      </article>

      <aside class="space-y-5">
        <article class="rounded-3xl border border-slatewood-200 bg-white p-6 shadow-card">
          <p class="text-xs uppercase tracking-[0.2em] text-slatewood-500">Need Help Now?</p>
          <a class="mt-2 block font-serif text-3xl text-slatewood-900 transition hover:text-calumet-700" href={mainLocation.phoneHref}>
            {mainLocation.phone}
          </a>
          <p class="mt-4 text-sm text-slatewood-600">{mainLocation.address}</p>
          <ul class="mt-4 space-y-1 text-sm text-slatewood-600">
            {mainLocation.hours.map((hours) => (
              <li>{hours}</li>
            ))}
          </ul>
          <a class="button-outline mt-6" href={mainLocation.addressHref} target="_blank" rel="noreferrer">
            Get Directions
          </a>
        </article>

        <div class="overflow-hidden rounded-3xl border border-slatewood-200 bg-white shadow-card">
          <iframe
            class="h-[300px] w-full"
            loading="lazy"
            src={contactPage.mapSection.mapEmbedUrl}
            title="Calumet Park map"
          ></iframe>
        </div>
      </aside>
    </div>
  </section>
</BaseLayout>
