---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
---

<BaseLayout title="Apply | Calumet Park Memorial" description="Join the Calumet Park team. Submit an application online.">
  <PageHero
    eyebrow="Hiring"
    title="Join Our Team"
    description="Serve families with professionalism, compassion, and excellence across our cemetery and funeral service locations."
    primaryCta={{ label: 'Start Application', href: '#application-form' }}
    secondaryCta={{ label: 'Contact HR', href: '/contact/' }}
  />

  <section class="section-spacing bg-white">
    <div class="container-wide">
      <h2 class="section-title">Life at Calumet Park</h2>
      <p class="section-lead">We are always looking for thoughtful team members committed to service and care.</p>
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        <div class="aspect-[4/3] rounded-3xl border border-slatewood-200 bg-gradient-to-br from-calumet-100 to-slatewood-100 p-6 text-sm text-slatewood-600">
          Community-focused service
        </div>
        <div class="aspect-[4/3] rounded-3xl border border-slatewood-200 bg-gradient-to-br from-slatewood-100 to-calumet-50 p-6 text-sm text-slatewood-600">
          Team collaboration across locations
        </div>
        <div class="aspect-[4/3] rounded-3xl border border-slatewood-200 bg-gradient-to-br from-calumet-50 to-slatewood-100 p-6 text-sm text-slatewood-600">
          Ongoing training and mentorship
        </div>
      </div>
    </div>
  </section>

  <section class="section-spacing bg-slatewood-50" id="application-form">
    <div class="container-wide max-w-4xl rounded-3xl border border-slatewood-200 bg-white p-6 md:p-8">
      <p class="section-eyebrow">Application Form</p>
      <h2 class="mt-2 font-serif text-3xl text-slatewood-900 md:text-4xl">Tell us about your interest.</h2>
      <form class="mt-8 grid gap-5 md:grid-cols-2">
        <label>
          <span class="field-label">Full Name</span>
          <input class="field-input" name="fullName" type="text" required />
        </label>
        <label>
          <span class="field-label">Email</span>
          <input class="field-input" name="email" type="email" required />
        </label>
        <label class="md:col-span-2">
          <span class="field-label">What interests you about working with us?</span>
          <textarea class="field-input min-h-[130px]" name="interestPrompt" required></textarea>
        </label>
        <label>
          <span class="field-label">Position</span>
          <select class="field-input" name="position" required>
            <option value="" disabled selected>Select a position</option>
            <option value="family-service-counselor">Family Service Counselor</option>
            <option value="grounds-operations">Grounds Operations</option>
            <option value="administrative-support">Administrative Support</option>
            <option value="funeral-attendant">Funeral Attendant</option>
          </select>
        </label>
        <label>
          <span class="field-label">Do you have related experience?</span>
          <select class="field-input" name="experience" required>
            <option value="" disabled selected>Select one</option>
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </label>
        <label>
          <span class="field-label">Available on weekends?</span>
          <select class="field-input" name="weekendAvailability" required>
            <option value="" disabled selected>Select one</option>
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </label>
        <label>
          <span class="field-label">Licenses / Certifications</span>
          <input class="field-input" name="licenses" type="text" placeholder="Driver's license, funeral director license, etc." />
        </label>
        <label class="md:col-span-2">
          <span class="field-label">Upload CV / Resume</span>
          <input class="field-input" name="cv" type="file" accept=".pdf,.doc,.docx" required />
        </label>
        <div class="md:col-span-2">
          <button class="button-primary" type="submit">Submit Application</button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>
