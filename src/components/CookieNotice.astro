<div id="cookie-notice" class="fixed inset-x-4 bottom-4 z-50 hidden rounded-2xl border border-slatewood-200 bg-white p-4 shadow-card sm:inset-x-auto sm:right-6 sm:w-[420px]">
  <p class="text-xs uppercase tracking-[0.14em] text-slatewood-500">Cookie Notice</p>
  <p class="mt-2 text-sm text-slatewood-600">
    We use cookies to improve site performance and provide a better experience while you browse Calumet Park resources.
  </p>
  <div class="mt-4 flex flex-wrap gap-3">
    <a class="button-outline" href="/privacy/">Learn More</a>
    <button id="cookie-notice-dismiss" class="button-primary" type="button">Accept</button>
  </div>
</div>

<script is:inline>
  const storageKey = 'cp-cookie-notice-dismissed';
  const notice = document.getElementById('cookie-notice');
  const dismissButton = document.getElementById('cookie-notice-dismiss');

  if (notice && window.localStorage.getItem(storageKey) !== '1') {
    notice.classList.remove('hidden');
  }

  dismissButton?.addEventListener('click', () => {
    window.localStorage.setItem(storageKey, '1');
    notice?.classList.add('hidden');
  });
</script>
